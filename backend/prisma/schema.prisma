generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user can join many rooms and a room can have many users => many to many
// user can create many messages and a message can be created by one user => one to many
// message can be in one room and a room can have many messages => one to many
// user can have role in a room (UserRoom model )
// user can be muted in a room
// user can be banned in a room

model User {
  id       Int        @id @default(autoincrement())
  name     String
  username String     @unique
  messages Message[]
  rooms    UserRoom[]
}

model Room {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  type      String
  isPrivate Boolean
  password  String?
  users     UserRoom[]
  messages  Message[]
}

model UserRoom {
  id       Int     @id @default(autoincrement())
  userId   Int
  roomId   Int
  role     Int
  isMuted  Boolean
  isBanned Boolean
  user     User    @relation(fields: [userId], references: [id])
  room     Room    @relation(fields: [roomId], references: [id])
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    Int
  createdAt DateTime @default(now())
}

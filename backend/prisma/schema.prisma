generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user can join many rooms and a room can have many users => many to many
// user can create many messages and a message can be created by one user => one to many
// message can be in one room and a room can have many messages => one to many

model User {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  rooms    Room[] @relation("UserRoom")
  messages Message[]
}

model Room {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] @relation("UserRoom")
  messages Message[]
}

model Message {
  id      Int      @id @default(autoincrement())
  content String
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
  room    Room     @relation(fields: [roomId], references: [id])
  roomId  Int
  createdAt DateTime @default(now())
}
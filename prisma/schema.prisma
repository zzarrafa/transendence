generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  displayName String @unique
  email String @unique
  picture String
  level Int 
  status String 
  wins Int 
  loses Int 
  role String 
  twoFactorAuthenticationSecret String 
  isTwoFactorAuthenticationEnabled Boolean
  winsHistory GameHistory[]  @relation("winner")
  lostHistory GameHistory[] @relation("loser")
  friends User[] @relation("friends")
  friendOf User[] @relation("friends")
  relationRequests Relationship[] @relation("relationRequests")

}

model Relationship{
  id Int @id @default(autoincrement())
  receiver Int
  sender User @relation("relationRequests", fields: [senderId], references: [id])
  senderId Int
  status String
}


model GameHistory {
  id Int @id @default(autoincrement())
  mode String
  winner User @relation(fields : [winnerId], references : [id], name: "winner")
  loser User @relation(fields : [loserId], references : [id] , name :"loser")
  winnerId Int
  loserId Int
  winner_score Int
  loser_score Int 
  createdAt DateTime @default(now())
}
